@model ProfileViewModel
@{
    ViewData["Title"] = Model.Account.FullName;
}
<section class="profile mt-20">
    <div class="row">
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="@Model.Account.ProfileImageSrc" alt="User Picture" class="rounded-circle img-fluid" style="width: 150px;">

                    <h5 class="my-3 text-muted">@Model.Account.UserName</h5>
                    <h5>@Model.Account.FullName</h5>

                    <small class="text-muted">
                        <span>Join Date:</span> @Model.Account.JoinDate
                    </small>
                </div>
            </div>

            <div class="card mb-4 mb-lg-0">
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush rounded-3">

                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="lni lni-layers me-2 text-danger"></i>
                            <a href="/orders/myOrders/">Orders</a>
                            <p class="mb-0">
                                <span class="badge rounded-pill bg-primary">2525</span>
                            </p>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="lni lni-heart me-2 text-success"></i>
                            <a href="/myDashboard/wishlist/">Wishlist</a>
                            <p class="mb-0">
                                <span class="badge rounded-pill bg-primary">45</span>
                            </p>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="lni lni-cart-full me-2 text-warning"></i>
                            <a href="/myDashboard/Cart/">Cart</a>
                            <p class="mb-0">
                                <span class="badge rounded-pill bg-primary">7</span>
                            </p>
                        </li>

                        <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                            <i class="lni lni-write me-2 text-info"></i> Reviews
                            <p class="mb-0">
                                <span class="badge rounded-pill bg-primary">55</span>
                            </p>
                        </li>

                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Full Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Account.FullName</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Account.Email</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Email Confirmation</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Account.EmailConfirmed</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Account.PhoneNumber</p>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone Confirmation</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Account.PhoneNumberConfirmed</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-body">
                    <p class="mb-4">
                        <b>Addresses </b> <b>(@Model.Addresses.Count())</b>
                    </p>

                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th scope="col">Country</th>
                                <th scope="col">State</th>
                                <th scope="col">city</th>
                                <th scope="col">Street</th>
                                <th scope="col">More</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Addresses)
                            {
                                <tr>
                                    <td>@item.Country</td>
                                    <td>@item.State</td>
                                    <td>@item.City</td>
                                    <td>@item.Street</td>
                                    <td>@item.MoreAboutAddress</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-6">
            </div>
        </div>

    </div>
</section>