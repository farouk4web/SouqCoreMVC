@model IEnumerable<Souq.Models.Order>
@{
    ViewData["Title"] = "My Orders";
}

<div class="userOrders">
    <h2>@ViewData["Title"] <b>@Model.Count()</b></h2>
    @if (Model.Count() == 0)
    {
        <div class="alert alert-secondary">
            <p class="lead">
                sorry we dont find any order On Our DataBase
            </p>
        </div>
    }

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6">
                <div class="orderItem alert alert-secondary">
                    <h4>OrderedIn: @item.DateOfCreate</h4>

                    <div class="row">
                        <div class="col-sm-6">
                            @if (item.IsDelivered)
                            {
                                <span class="btn btn-success">Is Delivered</span>
                            }
                            else
                            {
                                <span class="btn btn-secondary">Under Processing</span>
                            }
                        </div>

                        <div class="col-sm-6">
                            <a href="/Orders/Details/@item.Id" class="btn btn-success">More Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>